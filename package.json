{
  "name": "casher-desktop",
  "version": "1.0.0",
  "description": "A modern desktop cashier application built with React and Electron",
  "homepage": "./",
  "private": true,
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jokerf6/casher.git"
  },
  "keywords": [
    "electron",
    "react",
    "desktop",
    "cashier",
    "pos",
    "point-of-sale"
  ],
  "type": "commonjs",
  "main": "./src/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\" ",
    "dev:renderer": "cd src/renderer && npm start",
    "dev:main": "electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "cd src/renderer && npm run start",
    "clean": "rimraf dist",
    "build:main": "electron-builder --win --ia32 --x64=false",
    "prebuild:win": "taskkill /f /im \"Casher Desktop.exe\" 2>nul & rmdir /s /q dist 2>nul & exit 0",
    "build:win": "electron-builder --win --ia32",
    "build:win:smart": "node scripts/build-windows.cjs",
    "analyze:deps": "node scripts/analyze-dependencies.js",
    "debug:app": "node scripts/debug-app.js",
    "debug:app:cjs": "node scripts/debug-app.cjs",
    "debug:build": "node scripts/debug-build.js",
    "build:win:fix": "node scripts/build-windows-fix.cjs",
    "test": "npm run test:main && npm run test:renderer",
    "test:main": "jest --config=tests/main/jest.config.js",
    "test:renderer": "cd src/renderer && npm test",
    "test:e2e": "playwright test",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "postinstall": "cd src/renderer && npm install"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.13",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tanstack/react-table": "^8.21.3",
    "bcryptjs": "^2.4.3",
    "builder-util-runtime": "^9.3.1",
    "class-variance-authority": "^0.7.1",
    "conf": "^14.0.0",
    "date-fns": "^4.1.0",
    "debug": "^4.4.1",
    "dotenv": "^16.3.1",
    "electron-is-dev": "^3.0.1",
    "electron-log": "^5.0.1",
    "electron-pos-printer": "^1.3.8",
    "electron-printer": "^0.0.5",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.1.7",
    "escpos": "^3.0.0-alpha.6",
    "escpos-usb": "^3.0.0-alpha.4",
    "fs": "0.0.1-security",
    "fs-extra": "^10.1.0",
    "graceful-fs": "^4.2.11",
    "i18next": "^25.3.2",
    "i18next-http-backend": "^3.0.2",
    "jsbarcode": "^3.12.1",
    "jsonfile": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.525.0",
    "ms": "^2.1.3",
    "mysql2": "^3.6.5",
    "node-thermal-printer": "^4.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.61.1",
    "react-hot-toast": "^2.5.2",
    "react-i18next": "^15.6.1",
    "react-icons": "^5.5.0",
    "semver": "^7.7.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.0.2",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "universalify": "^2.0.1",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@types/node": "^20.10.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "concurrently": "^8.2.2",
    "electron": "12.2.3",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "playwright": "^1.40.0",
    "prettier": "^3.1.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.3.0",
    "wait-on": "^7.2.0",
    "webpack": "^5.100.2",
    "webpack-cli": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "build": {
    "appId": "com.yourcompany.casher",
    "productName": "Casher Desktop",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "asar": true,
    "asarUnpack": [
      "node_modules/**"
    ],
    "files": [
      "**/*",
      "node_modules/**"
    ],

    "extraResources": [
      {
        "from": "src/main/database/casher.db",
        "to": "casher.db"
      }
    ],
    "mac": {
      "category": "public.app-category.business",
      "icon": "build/icons/icon.icns"
    },
    "win": {
      "forceCodeSigning": false,
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ],
      "signDlls": false,
      "certificateFile": null,
      "certificatePassword": null
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icons/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "afterSign": null,
    "afterAllArtifactBuild": null,
    "forceCodeSigning": false
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
